/* pages/posts/posts.wxss */

swiper {
  width: 100%;
  height: 460rpx;
}

swiper image {
  width: 100%;
  height: 460rpx;
}

.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 10rpx;
}

.post-author-date {
  /* margin-top: 10rpx;
  margin-left: 20rpx;
  margin-bottom: 10rpx; */
  /* margin顺时针方向: 上 右 下 左 */
  margin: 10rpx 0 20rpx 10rpx;
  /* flex的方法很通用 */
  display: flex;
  flex-direction: row;
  align-items: center;
}

.post-author {
  width: 60rpx;
  height: 60rpx;
  /* 简单的居中方式 vertical-align*/
  /* vertical-align: middle; */
}

.post-date {
  margin-left: 20rpx;
  /* vertical-align: middle; */
  font-size: 26rpx;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  color: #333;
}

.post-image {
  width: 100%;
  height: 340rpx;
  margin-bottom: 30rpx;
}

.post-content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  /* 行高 */
  line-height: 40rpx;
  /* 字间距 */
  letter-spacing: 2rpx;
}

.post-like {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
}

.post-like-image {
  /* height: 32rpx;
  width: 32rpx; */
  margin-right: 16rpx;
}

.post-like-font {
  font-size: 26rpx;
  margin-right: 40rpx;
}